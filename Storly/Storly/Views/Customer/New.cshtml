@model Storly.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "New Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>

@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(c=>c.Customer.Name)
        @Html.TextBoxFor(c=> c.Customer.Name, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.BirthDate)
        @Html.TextBoxFor(c => c.Customer.BirthDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MemberShipTypeId)
        @Html.DropDownListFor(c => c.Customer.MemberShipTypeId, new SelectList(Model.MemberShip, "Id", "Name"), "Select MemberShip Type", new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c=>c.Customer.IsSubscribedByMemberShip) Subscibed to Newsletter?
        </label>
    </div>

    <button type="submit" class="btn btn-primary" >Submit</button>
    @Html.HiddenFor(c=>c.Customer.Id)
    
}